<?xml version="1.0" ?>
<odoo>

    <record id="view_dms_file_form" model="ir.ui.view">
        <field name="name">dms_file.form.dms.multi.company</field>
        <field name="model">dms.file</field>
        <field name="inherit_id" ref="dms.view_dms_file_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='permission_write']" position="before">
                <field
                    name="company_ids"
                    groups="base.group_multi_company"
                    widget="many2many_tags"
                    options="{'no_create': True}"
                />
            </xpath>
        </field>
    </record>

</odoo>
